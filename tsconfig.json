{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2015", "dom", "es2016.array.include"
        ],
        "sourceMap": true, 
        "experimentalDecorators": true,
        "outDir": "dist/packages",
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "scafford/**/*.ts",
        "tools/**/*.ts",
        "aot/**/*.ts",
        "src/demo/main-aot.ts"
    ]
}
